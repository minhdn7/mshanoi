<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHeaderDialog"
            android:textColor="@color/md_grey_800"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="Thông báo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNoiDung"
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="Để bảo vệ quý khách thời gian tạo mã tích điểm chỉ trong vòng 3 phút. Vui lòng ấn nút bên dưới nếu quý khách muốn tiếp tục"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button_corner_left_right_bottom"
        android:weightSum="10">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/btnOk"
            android:textSize="14sp"
            android:background="@color/md_blue_500"
            android:layout_marginLeft="8dp"
            android:textColor="@color/md_white"
            android:text="@string/tiepTuc"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/md_white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/btnHuy"
            android:textSize="14sp"
            android:background="@color/md_blue_500"
            android:textColor="@color/md_white"
            android:layout_marginRight="8dp"
            android:text="@string/huy"/>
    </LinearLayout>

</RelativeLayout>
