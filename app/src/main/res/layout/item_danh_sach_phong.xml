<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/viewPhongNghi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:id="@+id/imgNhaNghi"
            android:scaleType="fitXY"
            android:src="@drawable/nha_nghi_8" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTenPhongNghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phong Vip 1"
                android:textColor="@color/md_black"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtSoKhachPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2 khách/phòng"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/md_white"
                    android:text="@string/chon"
                    android:id="@+id/btnChonPhong"
                    android:background="@drawable/bg_button_orange_700"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:text="@string/chuaCoDanhGia"
                android:id="@+id/txtMieuTaPhong"
                android:maxLines="3"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtGiaPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="160.000 VND"
                    android:textColor="@color/md_orange_800"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ngayDem" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
