<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppIntroTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">@color/md_blue_500</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppTheme.CustomActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/md_custom_purple_400</item>
        <item name="colorPrimaryDark">@color/md_custom_purple_400</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="AppTheme.CustomActionBar2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="primary_button_style">
        <item name="android:textColor">@color/md_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="primary_edittext_style">
        <item name="android:textColor">@color/md_black</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_black</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/md_blue_700</item>

        //added attributes
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>

    <style name="iconGenText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_blue_500</item>
        <item name="android:background">@color/md_white</item>
    </style>

    <style name="iconFactoryClick">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_white</item>
        <item name="android:background">@color/md_blue_500</item>
    </style>


    <style name="HistoryCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/md_blue_600</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="full_screen_dialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_black</item>
        <item name="colorPrimaryDark">@color/md_black</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="customSpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/md_white</item>
    </style>


    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_blue_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>
</resources>
